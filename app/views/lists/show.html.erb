<div class="d-flex justify-content-between m-4 border">
  <div>
    <%= link_to "Back", lists_path, class: "btn btn-secondary p-3 rounded-5" %>
  </div>
  <div>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary p-3 rounded-5" %>
  </div>
</div>


<div class="bg-secondary mt-3 py-4" style=border-solid-black>

  <h2 class="text-center"><%= @list.name %></h2>

  <div class="row d-flex justify-content-evenly">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-3 col-3 d-flex justify-content-evenly" style="height: 150px">
        <div class="mt-2">
          <h5 class="text-center">
            <%= bookmark.movie.title %>
          </h5>
        </div>
        <div>
          <%= bookmark.comment %>
        </div>
        <div>
          <%= link_to "Remove this movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Why?! Are you sure?'}, class: "btn btn-danger btn-sm"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
